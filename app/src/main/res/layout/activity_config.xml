<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="br.ufpb.dcx.sisalfa.activities.ConfigActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:text="AJUSTAR TEMAS"
        android:textSize="40px" />

    <RelativeLayout
        android:layout_width="374dp"
        android:layout_height="136dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/my_border"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/impTemas"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/verTemas"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="-2dp"
            android:background="@drawable/button_style"
            android:text=" Importar Temas "
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/verTemas"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="21dp"
            android:background="@drawable/button_style"
            android:onClick="temas"
            android:text="Ver Temas "
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="301dp"
        android:text="AJUSTAR LETRAS"
        android:textSize="40px" />

    <RelativeLayout
        android:layout_width="374dp"
        android:layout_height="136dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/my_border"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="30dp">

        <TextView
            android:text="TIPOS DE LETRAS AQUI"
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>





</RelativeLayout>
